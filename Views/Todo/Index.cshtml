@model List<TWtodos2.Models.Todo>
<h1>@ViewData["Title"]</h1>

@if(Model.Count > 0){ 
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titulo</th>
      <th scope="col">Criado em</th>
      <th scope="col">Data de Entrega</th>
      <th scope="col">Finalizada em</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var todo in Model){
      <tr>
        <td>@todo.Id</td>
        <td>@todo.Title</td>
        <td>@todo.CreatedAt</td>
        <td>@todo.DeadLine</td>
        <td>
          @(todo.FinishedAt.HasValue ? todo.FinishedAt : "-")
        </td>
        <td>
          <a class="btn btn-success btn-sm" >
            Concluir
          </a>
          <a asp-controller="Todo" asp-action="Edit" asp-route-id="@todo.Id" class="btn btn-warning btn-sm" >
            Editar
          </a>
          <a asp-controller="Todo" asp-action="Delete" asp-route-id="@todo.Id" class="btn btn-danger btn-sm" >
            Excluir
          </a>
        </td>
      </tr>
    }
  </tbody>
</table>
} else {
  <p>Nenhuma tarefa cadastrada</p>
}

<a asp-controller="Todo" asp-action="Create" class="btn btn-primary">Nova Tarefa</a>

